@model PurvoZadanie.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Category</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Select Category</label>
        <select asp-for="Id" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Select a Category</option> <!-- Опция по подразбиране -->
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder" class="control-label"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

